{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": [
      "./src/common/types",
      "./node_modules/@types"
    ]
  },
  "exclude": ["node_modules", "dist"]
}
